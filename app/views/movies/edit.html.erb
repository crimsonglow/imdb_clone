<h1>Movies#edit</h1>

<%= form_with model: @movie, url: movie_path, method: :put, local: true do |f| %>

  <%= f.label :title %>:
  <%= f.text_field :title %>

  <%= f.label :category %>:
  <%= f.text_field :category %>

  <%= f.label :description %>:
  <%= f.text_field :description %>
  
  <%= f.submit %>
<% end %>